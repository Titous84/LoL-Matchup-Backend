{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // Source : ChatGPT
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    "noImplicitAny": false
  },
  "include": ["src"]
}
