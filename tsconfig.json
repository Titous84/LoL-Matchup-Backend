{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Source : OpenAI ChatGPT
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["src"]
}
